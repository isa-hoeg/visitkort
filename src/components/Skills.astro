---
const { program, description } = Astro.props;
---

<div x-data="{ open: false }" class="relative inline-block m-2">
  <!-- Skill-box -->
  <div 
    class="bg-white/20 backdrop-blur-lg border border-white/50 text-black font-display text-xs px-4 py-3 rounded-xl shadow-lg cursor-pointer transition-shadow duration-300 hover:shadow-xl hover:bg-red-700/70 hover:text-primary"
    x-on:click="open = !open"
  >
    {program}
  </div>

  <!-- Dropdown / beskrivelse -->
  <div 
    x-show="open" 
    x-transition
    x-on:click.outside="open = false"
    class="absolute left-1/2 -translate-x-1/2 mt-2 w-52 bg-primary backdrop-blur-md border border-white/40 text-red-700 font-bold font-serif text-xs md:text-sm px-4 py-3 rounded-lg shadow-lg z-50"
    x-cloak
  >
    {description}
  </div>
</div>

